<ivysettings>
	<credentials host="localhost" realm="Sonatype Nexus Repository Manager" username="admin" passwd="admin123"/>
	<caches defaultCacheDir="${user.home}/.ivy2/cache"/>

	<resolvers>
		<ibiblio
			name="nexus-local-release"
			m2compatible="true"
			root="http://localhost:8071/nexus/content/repositories/releases" />
		<ibiblio
			name="sonatype-snapshots"
			m2compatible="true"
			root="https://oss.sonatype.org/content/repositories/snapshots" />
		<ibiblio
			name="sonatype-staging"
			m2compatible="true"
			root="https://oss.sonatype.org/service/local/staging/deploy/maven2"
			checkmodified="true"
			changingPattern="*-SNAPSHOT" />
	</resolvers>
</ivysettings>